    categoryorder = "array", 
    domain = c(0, 1), 
    nticks = 9, 
    range = c("1982-01-01", "2018-11-22 15:10:14.3975"), 
    showgrid = FALSE, 
    showline = FALSE, 
    showspikes = FALSE, 
    tickmode = "auto", 
